<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue"
    tools:context=".AddCvActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblLoginForm4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0"
            android:gravity="center|center_horizontal"
            android:text="Create CV"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/lblLoginForm5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0"
            android:gravity="center_horizontal|left|center_vertical"
            android:text="CV Title"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:background="@drawable/much_round_txt"
            android:cursorVisible="true"
            android:ems="10"
            android:inputType="textShortMessage|textPersonName"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/lblLoginForm6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0"
            android:gravity="center_horizontal|left|center_vertical"
            android:text="Region"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Spinner
            android:id="@+id/spnRegions"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:background="@drawable/much_round_txt"
            android:dropDownWidth="match_parent"
            android:padding="5dp"
            android:popupBackground="@color/control_overlay"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/lblLoginForm7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0"
            android:gravity="center_horizontal|left|center_vertical"
            android:text="District"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Spinner
            android:id="@+id/spnDistricts"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:background="@drawable/much_round_txt"
            android:dropDownWidth="match_parent"
            android:padding="5dp"
            android:popupBackground="@color/control_overlay"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/lblLoginForm8"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0"
            android:gravity="center_horizontal|left|center_vertical"
            android:text="Industry"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Spinner
            android:id="@+id/spnIndustries"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:background="@drawable/much_round_txt"
            android:dropDownWidth="match_parent"
            android:padding="5dp"
            android:popupBackground="@color/control_overlay"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/lblLoginForm9"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0"
            android:gravity="center_horizontal|left|center_vertical"
            android:text="Skills"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/meditSkills"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:background="@drawable/much_round_txt"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:padding="10dp" />

        <TextView
            android:id="@+id/lblLoginForm10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0"
            android:gravity="center_horizontal|left|center_vertical"
            android:text="Status"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Spinner
            android:id="@+id/spnCvStatuses"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0"
            android:background="@drawable/much_round_txt"
            android:dropDownWidth="match_parent"
            android:padding="5dp"
            android:popupBackground="@color/control_overlay"
            android:spinnerMode="dialog" />

        <Button
            android:id="@+id/btnCreateCv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="0"
            android:textColor="@color/colorBlue"
            android:background="@drawable/much_round_btn"
            android:text="Create" />
    </LinearLayout>
</ScrollView>